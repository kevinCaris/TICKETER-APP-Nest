<div class="max-w-7xl mx-auto px-4 py-8">
    <!-- Stepper -->
    <div class="flex items-center justify-between mb-8 max-w-4xl mx-auto">
        <div class="flex items-center">
            <div class="w-10 h-10 bg-indigo-600 text-white rounded-full flex items-center justify-center font-bold">✓
            </div>
            <span class="ml-2 text-sm font-medium">Choisir l'heure</span>
        </div>
        <div class="flex-1 h-0.5 bg-indigo-600 mx-4"></div>

        <div class="flex items-center">
            <div class="w-10 h-10 bg-indigo-600 text-white rounded-full flex items-center justify-center font-bold">2
            </div>
            <span class="ml-2 text-sm font-medium">Choisir les places</span>
        </div>
        <div class="flex-1 h-0.5 bg-gray-300 mx-4"></div>

        <div class="flex items-center">
            <div class="w-10 h-10 bg-gray-300 text-gray-600 rounded-full flex items-center justify-center">3</div>
            <span class="ml-2 text-sm text-gray-500">Paiement</span>
        </div>
        <div class="flex-1 h-0.5 bg-gray-300 mx-4"></div>

        <div class="flex items-center">
            <div class="w-10 h-10 bg-gray-300 text-gray-600 rounded-full flex items-center justify-center">4</div>
            <span class="ml-2 text-sm text-gray-500">Obtenir le billet</span>
        </div>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-3 gap-8 max-w-7xl mx-auto">
        <!-- Liste des billets -->
        <div class="lg:col-span-2">
            <h3 class="text-xl font-bold mb-4">Votre liste de billets</h3>
            {{#if bookings.length}}
                {{#each bookings}}
                <div class="bg-white rounded-lg p-4 shadow-sm border mb-4">
                    <div class="flex gap-4">
                        <img src="{{this.concertId.image}}" alt="{{this.concertId.title}}" class="w-24 h-24 object-cover rounded">

                        <div class="flex-1 items-center">
                            <h4 class="font-bold text-lg">{{this.concertId.title}}</h4>
                            <p class="text-sm text-gray-600">{{formatdate this.concertId.date}} · Billet VIP</p>
                            <p class="text-sm text-gray-600 mt-1">Quantité: {{this.quantity}} × {{this.concertId.price}}€</p>
                            <p class="font-bold text-lg mt-2">{{this.amount}}€</p>
                        </div>

                        <div class="flex items-center flex-col gap-2">
                            <button onclick="deleteBooking('{{this._id}}')" class="text-gray-600 hover:text-red-600 p-2" title="Supprimer">
                                <i class="fas fa-trash"></i>
                            </button>
                        </div>
                    </div>
                </div>
                {{/each}}
            {{else}}
                <div class="bg-white rounded-lg p-8 shadow-sm border text-center">
                    <i class="fas fa-ticket-alt text-4xl text-gray-300 mb-4"></i>
                    <p class="text-gray-600 mb-4">Votre panier est vide</p>
                    <a href="/concerts" class="inline-block bg-indigo-600 text-white px-6 py-2 rounded-lg hover:bg-indigo-700">
                        Découvrir les concerts
                    </a>
                </div>
            {{/if}}
        </div>


        <div class="lg:col-span-1">
            <div class="bg-white rounded-lg shadow-sm border p-6 sticky top-4">
                <h3 class="text-xl font-bold mb-4">Résumé de la commande</h3>

                <div class="mb-4">
                    <p class="text-sm text-gray-600">{{concertTitle}}, {{quantity}} Billets VIP</p>
                </div>

                <div class="space-y-2 mb-4 pb-4 border-b">
                    <div class="flex justify-between">
                        <span class="text-gray-600">Sous-total</span>
                        <span class="font-medium">{{subtotal}}€</span>
                    </div>
                    <div class="flex justify-between">
                        <span class="text-gray-600">Frais de service</span>
                        <span class="font-medium">{{serviceFees}}€</span>
                    </div>
                </div>

                <div class="flex justify-between text-lg font-bold mb-6">
                    <span>Total EUR ({{quantity}} articles)</span>
                    <span>{{total}}€</span>
                </div>

                <div class="space-y-3">
                    <button onclick="checkout()"
                        class="w-full bg-indigo-600 text-white py-3 rounded-lg font-medium hover:bg-indigo-700">
                        Passer au paiement
                    </button>
                    <button
                        class="w-full bg-white border border-gray-300 py-3 rounded-lg font-medium hover:bg-gray-50 flex items-center justify-center gap-2">
                        <i class="fab fa-paypal text-blue-600"></i>
                        Paypal
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    function checkout() {
        window.location.href = '/bookings/checkout';
    }

    async function deleteBooking(bookingId) {
        console.log("The booking ID is:", bookingId);
        try {
            const response = await fetch(`/bookings/${bookingId}`, {
                method: 'DELETE',
                headers: {
                    'Content-Type': 'application/json',
                },
                credentials: 'include',
            });

            const data = await response.json();

            console.log(data)
            if (data.success) {
                alert('Ticket suprimé du panier avec succès!');
                window.location.href = '/bookings/cart';
            } else {
                alert('Erreur: ' + (data.message || 'Erreur inconnue'));
            }
        } catch (error) {
            console.error('Erreur:', error);
            alert('Erreur lors de la supression. Êtes-vous connecté?');
        }
    }
</script>