<div class="grid grid-cols-1 lg:grid-cols-3 gap-8 max-w-7xl mx-auto p-10">
    <div class="lg:col-span-2">
        <h3 class="text-xl font-bold mb-4">Vos billets pour les concerts</h3>
        {{#if bookings.length}}
        {{#each bookings}}
        <div
            class="bg-white rounded-lg p-4 shadow-sm border mb-4 w-full hover:scale-120 hover:cursor-pointer hover:bg-blue-200">
            <div class="flex gap-4">
                <img src="{{this.concertId.image}}" alt="{{this.concertId.title}}"
                    class="w-24 h-24 object-cover rounded">

                <div class="flex-1 items-center">
                    <h4 class="font-bold text-lg">{{this.concertId.title}}</h4>
                    <p class="text-sm text-gray-600">{{formatdate this.concertId.date}} · Billet VIP</p>
                    <p class="text-sm text-gray-600 mt-1">Quantité: {{this.quantity}} × {{this.concertId.price}}€</p>
                    <p class="font-bold text-lg mt-2">{{this.amount}}€</p>
                </div>
                <div class="flex items-center flex-col gap-2">
                    <button onclick="seeBooking('{{this.concertId._id}}')" class="text-gray-600 hover:text-red-600 p-2"
                        title="See">
                        <i class="fa fa-eye"></i>
                    </button>
                </div>
            </div>
        </div>
        {{/each}}
        {{else}}
        <div class="bg-white rounded-lg p-8 shadow-sm border text-center">
            <i class="fas fa-ticket-alt text-4xl text-gray-300 mb-4"></i>
            <p class="text-gray-600 mb-4">Votre panier est vide</p>
            <a href="concerts/view" class="inline-block bg-indigo-600 text-white px-6 py-2 rounded-lg hover:bg-indigo-700">
                Découvrir les concerts
            </a>
        </div>
        {{/if}}
    </div>
</div>

<script>
    function seeBooking(id) {
        window.location.href = `http://localhost:3000/concerts/view/${id}`;
    }
</script>