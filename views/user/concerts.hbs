<!-- Filters Section -->
<section class="bg-white py-6 border-b">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex flex-wrap items-center gap-4">
            <div class="relative flex-1 min-w-[250px]">
                <i class="fas fa-search absolute left-4 top-1/2 transform -translate-y-1/2 text-gray-400"></i>
                <input type="text" id="searchInput" placeholder="Search concerts" class="w-full pl-12 pr-4 py-2.5 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-indigo-600">
            </div>

            <div class="relative">
                <i class="fas fa-music absolute left-4 top-1/2 transform -translate-y-1/2 text-gray-400"></i>
                <select id="genreFilter" class="pl-12 pr-10 py-2.5 border border-gray-300 rounded-lg appearance-none focus:outline-none focus:ring-2 focus:ring-indigo-600 bg-white">
                    <option value="">All Genres</option>
                    {{#each genres}}
                    <option value="{{this}}" {{#if (eq this ../selectedGenre)}}selected{{/if}}>{{this}}</option>
                    {{/each}}
                </select>
            </div>

            <button onclick="applyFilters()" class="bg-indigo-600 hover:bg-indigo-700 text-white px-6 py-2.5 rounded-lg font-medium transition duration-200">
                Apply Filters
            </button>
        </div>
    </div>
</section>

<!-- Concerts Title -->
<section class="py-8 bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <h1 class="text-3xl font-bold text-center mb-2">Concerts</h1>
        <p class="text-center text-gray-600">The best concerts with your favorite singers</p>
    </div>
</section>

<!-- Concerts Grid -->
<section class="py-8 bg-gray-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6">
            {{#each concerts}}
            <div class="bg-white rounded-xl overflow-hidden shadow-md hover-scale cursor-pointer">
                <div class="relative h-72">
                    <img src="{{this.image}}" alt="{{this.title}}" class="w-full h-full object-cover">
                </div>
                <div class="p-4">
                    <div class="flex justify-between items-center mb-2">
                        <span class="bg-red-500 text-white px-3 py-1 rounded-full text-xs font-semibold">
                            {{formatDate this.date}}
                        </span>
                        <span class="text-xs font-semibold">{{this.hour}}</span>
                    </div>
                    <h3 class="font-bold text-lg mb-2">{{this.title}}</h3>
                    <p class="text-gray-600 text-sm mb-1">{{this.genre}}</p>
                    <p class="text-gray-600 text-sm mb-2">{{this.location}}</p>
                    <p class="text-indigo-600 font-bold text-lg mb-3">${{this.price}}</p>
                    <a href="/concerts/view/{{this._id}}" class="block w-full bg-indigo-600 hover:bg-indigo-700 text-white py-2 rounded-lg font-medium transition duration-200 text-center">
                        View Details
                    </a>
                </div>
            </div>
            {{else}}
            <div class="col-span-4 text-center py-12">
                <p class="text-gray-600 text-lg">No concerts found</p>
            </div>
            {{/each}}
        </div>
    </div>
</section>

<script>
    function applyFilters() {
        const genre = document.getElementById('genreFilter').value;
        const params = new URLSearchParams();
        
        if (genre) params.append('genre', genre);
        
        window.location.href = '/concerts/view?' + params.toString();
    }
</script>