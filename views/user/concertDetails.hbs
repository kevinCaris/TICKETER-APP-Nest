<!-- Concert Detail Hero -->
<section class="relative h-96 bg-gray-900">
    <img src="{{concert.image}}" alt="{{concert.title}}" class="w-full h-full object-cover opacity-50">
    <div class="absolute inset-0 flex items-center justify-center">
        <div class="text-center text-white">
            <span class="bg-red-500 px-4 py-2 rounded-full text-sm font-semibold mb-4 inline-block">
                {{formatDate concert.date}} - {{concert.hour}}
            </span>
            <h1 class="text-5xl font-bold mb-4">{{concert.title}}</h1>
            <p class="text-xl mb-2">{{concert.genre}}</p>
            <p class="text-lg flex items-center justify-center">
                <i class="fas fa-map-marker-alt mr-2"></i>
                {{concert.location}}
            </p>
        </div>
    </div>
</section>

<!-- Concert Information -->
<section class="py-12 bg-white">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="grid grid-cols-1 md:grid-cols-2 gap-8 mb-8">
            <!-- Left Column -->
            <div>
                <h2 class="text-2xl font-bold mb-4">Concert Details</h2>
                <div class="space-y-4">
                    <div class="flex items-start">
                        <i class="fas fa-calendar-alt text-indigo-600 mt-1 mr-3"></i>
                        <div>
                            <p class="font-semibold">Date</p>
                            <p class="text-gray-600">{{formatDate concert.date}}</p>
                        </div>
                    </div>
                    <div class="flex items-start">
                        <i class="fas fa-clock text-indigo-600 mt-1 mr-3"></i>
                        <div>
                            <p class="font-semibold">Time</p>
                            <p class="text-gray-600">{{concert.hour}}</p>
                        </div>
                    </div>
                    <div class="flex items-start">
                        <i class="fas fa-map-marker-alt text-indigo-600 mt-1 mr-3"></i>
                        <div>
                            <p class="font-semibold">Location</p>
                            <p class="text-gray-600">{{concert.location}}</p>
                        </div>
                    </div>
                    <div class="flex items-start">
                        <i class="fas fa-music text-indigo-600 mt-1 mr-3"></i>
                        <div>
                            <p class="font-semibold">Genre</p>
                            <p class="text-gray-600">{{concert.genre}}</p>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Right Column - Booking Card -->
            <div class="bg-gray-50 p-6 rounded-xl shadow-md">
                <h3 class="text-2xl font-bold mb-4">Book Your Tickets</h3>
                <div class="mb-6">
                    <p class="text-3xl font-bold text-indigo-600 mb-2">${{concert.price}}</p>
                    <p class="text-gray-600">Per Ticket</p>
                </div>

                <div class="mb-6">
                    <div class="flex justify-between items-center mb-2">
                        <span class="font-semibold">Available Seats</span>
                        <span class="text-indigo-600 font-bold">{{concert.availableSeats}} /
                            {{concert.totalSeats}}</span>
                    </div>
                    <div class="w-full bg-gray-200 rounded-full h-2">
                        <div class="bg-indigo-600 h-2 rounded-full"
                            style="width: {{calculatePercentage concert.availableSeats concert.totalSeats}}%"></div>
                    </div>
                </div>

                <div class="mb-6">
                    <label class="block font-semibold mb-2">Number of Tickets</label>
                    <input id="ticketQuantity" type="number" min="1" max="{{concert.availableSeats}}" value="1"
                        class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-indigo-600">
                </div>

                <div class="mb-6 flex justify-between items-center">
                    <span class="font-semibold">Total Price:</span>
                    <span id="totalPrice" class="text-2xl font-bold text-indigo-600">
                        
                    </span>
                </div>

                <button onclick="bookNow('{{concert._id}}', {{concert.price}})"
                    class="w-full bg-indigo-600 hover:bg-indigo-700 text-white py-3 rounded-lg font-bold text-lg transition duration-200">
                    Book Now
                </button>

                <p class="text-center text-gray-600 text-sm mt-4">
                    <i class="fas fa-shield-alt mr-1"></i>
                    Secure Payment
                </p>
            </div>
        </div>

        <!-- Description -->
        <div class="mt-8">
            <h2 class="text-2xl font-bold mb-4">About This Concert</h2>
            <p class="text-gray-700 leading-relaxed">{{concert.description}}</p>
        </div>

        <!-- Back Button -->
        <div class="mt-8 text-center">
            <a href="/concerts/view"
                class="inline-block bg-gray-200 hover:bg-gray-300 text-gray-800 px-6 py-3 rounded-lg font-medium transition duration-200">
                <i class="fas fa-arrow-left mr-2"></i>
                Back to Concerts
            </a>
        </div>
    </div>
</section>

<script>
    const pricePerTicket = {{ concert.price }};
    const quantityInput = document.getElementById('ticketQuantity');
    const totalPriceElement = document.getElementById('totalPrice');

    // Update total price when quantity changes
    if (quantityInput && totalPriceElement) {
        quantityInput.addEventListener('input', function () {
            const quantity = parseInt(this.value) || 1;
            const total = quantity * pricePerTicket;
            totalPriceElement.textContent = total + '€';
        });
    }

    async function bookNow(concertId, price) {

        const quantity = parseInt(document.getElementById('ticketQuantity').value);
        if (quantity < 1) {
            alert('Veuillez sélectionner au moins 1 billet');
            return;
        }

        if (quantity > {{ concert.availableSeats }}) {
        alert('Pas assez de places disponibles');
        return;
    }

    try {
        
        const response = await fetch('/bookings/booking', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json',
            },
            credentials: 'include',
            body: JSON.stringify({
                concertId: concertId,
                quantity: quantity
            })
        });

        const data = await response.json();

        if (data.success) {
            alert('Réservation ajoutée au panier avec succès!');
            window.location.href = '/bookings/cart';
        } else {
            alert('Erreur: ' + (data.message || 'Erreur inconnue'));
        }
    } catch (error) {
        console.error('Erreur:', error);
        alert('Erreur lors de la réservation. Êtes-vous connecté?');
    }
    }
</script>