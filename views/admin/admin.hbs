
<header class="bg-white shadow-sm sticky top-0 z-10">
    <div class="flex items-center justify-between px-4 md:px-8 py-4">
        <div class="flex-1">
            <h2 class="text-xl md:text-2xl font-bold text-gray-800">Tableau de Bord</h2>
            <p class="text-gray-600 text-sm hidden sm:block">Bienvenue, Admin!</p>
        </div>
    </div>
</header>

<div class="p-4 md:p-8">
    <!-- Cartes de Statistiques -->
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-4 md:gap-6 mb-6 md:mb-8">
        <!-- Total Utilisateurs -->
        <div class="bg-gradient-to-br from-blue-500 to-indigo-600 rounded-xl p-6 text-white shadow-lg">
            <div class="flex items-center justify-between mb-4">
                <div>
                    <p class="text-white/80 text-sm font-medium">Total Utilisateurs</p>
                    <h3 id="totalUsers" class="text-3xl font-bold mt-1">0</h3>
                </div>
                <div class="w-14 h-14 bg-white/20 rounded-full flex items-center justify-center">
                    <i class="fas fa-users text-2xl"></i>
                </div>
            </div>
            <div class="flex items-center text-sm">
                <i class="fas fa-arrow-up mr-1"></i>
                <span id="usersChange">0%</span>
            </div>
        </div>

        <!-- Total Concerts -->
        <div class="bg-gradient-to-br from-orange-500 to-pink-500 rounded-xl p-6 text-white shadow-lg">
            <div class="flex items-center justify-between mb-4">
                <div>
                    <p class="text-white/80 text-sm font-medium">Total Concerts</p>
                    <h3 id="totalConcerts" class="text-3xl font-bold mt-1">0</h3>
                </div>
                <div class="w-14 h-14 bg-white/20 rounded-full flex items-center justify-center">
                    <i class="fas fa-music text-2xl"></i>
                </div>
            </div>
            <div class="flex items-center text-sm">
                <i class="fas fa-arrow-up mr-1"></i>
                <span id="concertsChange">0%</span>
            </div>
        </div>

        <!-- Total Groupes -->
        <div class="bg-gradient-to-br from-green-500 to-teal-500 rounded-xl p-6 text-white shadow-lg">
            <div class="flex items-center justify-between mb-4">
                <div>
                    <p class="text-white/80 text-sm font-medium">Total Groupes</p>
                    <h3 id="totalGroups" class="text-3xl font-bold mt-1">0</h3>
                </div>
                <div class="w-14 h-14 bg-white/20 rounded-full flex items-center justify-center">
                    <i class="fas fa-user-group text-2xl"></i>
                </div>
            </div>
            <div class="flex items-center text-sm">
                <i class="fas fa-arrow-up mr-1"></i>
                <span id="groupsChange">0%</span>
            </div>
        </div>

        <!-- Total Réservations -->
        <div class="bg-gradient-to-br from-yellow-500 to-red-500 rounded-xl p-6 text-white shadow-lg">
            <div class="flex items-center justify-between mb-4">
                <div>
                    <p class="text-white/80 text-sm font-medium">Total Réservations</p>
                    <h3 id="totalBookings" class="text-3xl font-bold mt-1">0</h3>
                </div>
                <div class="w-14 h-14 bg-white/20 rounded-full flex items-center justify-center">
                    <i class="fas fa-ticket-alt text-2xl"></i>
                </div>
            </div>
            <div class="flex items-center text-sm">
                <i class="fas fa-arrow-up mr-1"></i>
                <span id="bookingsChange">0%</span>
            </div>
        </div>
    </div>

    <!-- Statistiques Supplémentaires -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4 md:gap-6 mb-6 md:mb-8">
        <!-- Événements Actifs -->
        <div class="bg-white rounded-xl shadow-md p-6">
            <div class="flex items-center justify-between mb-4">
                <h3 class="text-lg font-bold text-gray-800">Événements Actifs</h3>
                <i class="fas fa-calendar-check text-2xl text-purple-500"></i>
            </div>
            <h2 id="activeEvents" class="text-4xl font-bold text-gray-800">0</h2>
            <p class="text-gray-600 text-sm mt-2">Concerts ce mois-ci</p>
        </div>

        <!-- Réservations en Attente -->
        <div class="bg-white rounded-xl shadow-md p-6">
            <div class="flex items-center justify-between mb-4">
                <h3 class="text-lg font-bold text-gray-800">Réservations en Attente</h3>
                <i class="fas fa-hourglass-half text-2xl text-yellow-500"></i>
            </div>
            <h2 id="pendingBookings" class="text-4xl font-bold text-gray-800">0</h2>
            <p class="text-gray-600 text-sm mt-2">En attente de confirmation</p>
        </div>

        <!-- Revenu du Mois -->
        <div class="bg-white rounded-xl shadow-md p-6">
            <div class="flex items-center justify-between mb-4">
                <h3 class="text-lg font-bold text-gray-800">Revenu du Mois</h3>
                <i class="fas fa-dollar-sign text-2xl text-green-500"></i>
            </div>
            <h2 id="monthlyRevenue" class="text-4xl font-bold text-gray-800">$0</h2>
            <p class="text-gray-600 text-sm mt-2">Ventes de billets</p>
        </div>

      
    </div>

    <!-- Graphiques et Analyses -->
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
        
        <!-- Genres de Concerts les Plus Populaires -->
        <div class="bg-white rounded-xl shadow-md p-6">
            <h3 class="text-lg font-bold text-gray-800 mb-6">Genres les Plus Populaires</h3>
            <div id="genresContainer" class="space-y-4">
                <!-- Chargé dynamiquement -->
            </div>
        </div>
    </div>
</div>

<script>
    const API_BASE = '';

    async function chargerStatsTableauBord() {
        try {
            const reponseUtilisateurs = await fetch(`${API_BASE}/users`);
            const utilisateurs = await reponseUtilisateurs.json();
            document.getElementById('totalUsers').textContent = utilisateurs.length;

            const reponseConcerts = await fetch(`${API_BASE}/concerts`);
            const concerts = await reponseConcerts.json();
            document.getElementById('totalConcerts').textContent = concerts.length;
            
            const maintenant = new Date();
            const concertsCeMois = concerts.filter(c => {
                const dateConcert = new Date(c.date);
                return dateConcert.getMonth() === maintenant.getMonth() && dateConcert.getFullYear() === maintenant.getFullYear();
            });
            document.getElementById('activeEvents').textContent = concertsCeMois.length;

            const compteurGenres = {};
            concerts.forEach(c => {
                compteurGenres[c.genre] = (compteurGenres[c.genre] || 0) + 1;
            });
            const genresPrincipaux = Object.entries(compteurGenres)
                .sort((a, b) => b[1] - a[1])
                .slice(0, 5);
            
            const htmlGenres = genresPrincipaux.map(([genre, nombre]) => `
                <div class="flex items-center justify-between">
                    <span class="text-sm text-gray-700">${genre}</span>
                    <span class="text-sm font-bold text-gray-900">${nombre}</span>
                </div>
            `).join('');
            document.getElementById('genresContainer').innerHTML = htmlGenres;

            const reponseGroupes = await fetch(`${API_BASE}/groups`);
            const groupes = await reponseGroupes.json();
            document.getElementById('totalGroups').textContent = groupes.length;

            try {
                const reponseReservations = await fetch('/bookings');
                if (reponseReservations.ok) {
                    const reservations = await reponseReservations.json();
                    document.getElementById('totalBookings').textContent = reservations.length;

                }
            } catch (e) {
                console.log('Point de terminaison des réservations non disponible');
            }

            document.getElementById('usersChange').textContent = '12%';
            document.getElementById('concertsChange').textContent = '8%';
            document.getElementById('groupsChange').textContent = '15%';
            document.getElementById('bookingsChange').textContent = '23%';

        } catch (erreur) {
            console.error('Erreur chargement statistiques:', erreur);
        }
    }

    document.addEventListener('DOMContentLoaded', chargerStatsTableauBord);

    setInterval(chargerStatsTableauBord, 60000);
</script>
