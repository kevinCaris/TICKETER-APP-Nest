<!-- Edit Concert Modal -->
<div id="editModal" class="modal">
    <div class="bg-white rounded-xl shadow-2xl w-full max-w-3xl p-8 m-4 max-h-[90vh] overflow-y-auto">
        <div class="flex items-center justify-between mb-6">
            <h3 class="text-2xl font-bold text-gray-800">Edit Concert</h3>
            <button onclick="closeModal('editModal')" class="text-gray-400 hover:text-gray-600">
                <i class="fas fa-times text-2xl"></i>
            </button>
        </div>
        <form id="editForm" class="space-y-4" onsubmit="updateConcert(event)">
            <input type="hidden" name="id" id="edit-id">
            
            <div>
                <label class="block text-sm font-medium text-gray-700 mb-2">Titre de concert *</label>
                <input type="text" name="title" id="edit-title" required class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-pink-600">
            </div>
            
            <div>
                <label class="block text-sm font-medium text-gray-700 mb-2">Description *</label>
                <textarea name="description" id="edit-description" required rows="3" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-pink-600"></textarea>
            </div>

            <div class="grid grid-cols-2 gap-4">
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-2">Genre *</label>
                    <input type="text" name="genre" id="edit-genre" required class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-pink-600">
                </div>
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-2">Groupe ID *</label>
                    <input type="text" name="group" id="edit-group" required class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-pink-600">
                </div>
            </div>

            <div class="grid grid-cols-2 gap-4">
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-2">Date *</label>
                    <input type="date" name="date" id="edit-date" required class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-pink-600">
                </div>
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-2">Heure *</label>
                    <input type="time" name="hour" id="edit-hour" required class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-pink-600">
                </div>
            </div>

            <div>
                <label class="block text-sm font-medium text-gray-700 mb-2">Lieu *</label>
                <input type="text" name="location" id="edit-location" required class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-pink-600">
            </div>

            <div class="grid grid-cols-3 gap-4">
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-2">Total de place *</label>
                    <input type="number" name="totalSeats" id="edit-totalSeats" required class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-pink-600">
                </div>
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-2">Place disponible *</label>
                    <input type="number" name="availableSeats" id="edit-availableSeats" required class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-pink-600">
                </div>
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-2">Prix ($) *</label>
                    <input type="number" name="price" id="edit-price" required class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-pink-600">
                </div>
            </div>

            <div>
                <label class="block text-sm font-medium text-gray-700 mb-2">Concert Image URL *</label>
                <input type="url" name="image" id="edit-image" required class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-pink-600">
            </div>

            <div>
                <label class="block text-sm font-medium text-gray-700 mb-2">Status</label>
                <select name="status" id="edit-status" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-pink-600">
                    <option value="true">Active</option>
                    <option value="false">Inactive</option>
                </select>
            </div>

            <div class="flex space-x-4 pt-4">
                <button type="submit" class="flex-1 bg-gradient-to-r from-pink-600 to-rose-600 hover:from-pink-700 hover:to-rose-700 text-white px-6 py-3 rounded-lg font-medium">
                    Sauvegarder
                </button>
                <button type="button" onclick="closeModal('editModal')" class="flex-1 bg-gray-200 hover:bg-gray-300 text-gray-800 px-6 py-3 rounded-lg font-medium">
                    Annuler
                </button>
            </div>
        </form>
    </div>
</div>

<script>
    function openModal(modalId) {
        document.getElementById(modalId).classList.add('show');
    }

    function closeModal(modalId) {
        document.getElementById(modalId).classList.remove('show');
    }

    async function createConcert(event) {
        event.preventDefault();
        const formData = new FormData(event.target);
        const data = Object.fromEntries(formData);
        data.status = data.status === 'true';
        data.totalSeats = parseInt(data.totalSeats);
        data.availableSeats = parseInt(data.availableSeats);
        data.price = parseFloat(data.price);

        try {
            const response = await fetch('/concerts', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify(data),
                credentials: 'include'
            });

            if (response.ok) {
                alert('Concert created successfully!');
                window.location.reload();
            } else {
                alert('Error creating concert');
            }
        } catch (error) {
            alert('Network error');
        }
    }

    async function openEditModal(id) {
        try {
            const response = await fetch(`/concerts/${id}`);
            const concert = await response.json();

            document.getElementById('edit-id').value = concert._id;
            document.getElementById('edit-title').value = concert.title;
            document.getElementById('edit-description').value = concert.description;
            document.getElementById('edit-genre').value = concert.genre;
            document.getElementById('edit-group').value = concert.group;
            document.getElementById('edit-date').value = concert.date.split('T')[0];
            document.getElementById('edit-hour').value = concert.hour;
            document.getElementById('edit-location').value = concert.location;
            document.getElementById('edit-totalSeats').value = concert.totalSeats;
            document.getElementById('edit-availableSeats').value = concert.availableSeats;
            document.getElementById('edit-price').value = concert.price;
            document.getElementById('edit-image').value = concert.image;
            document.getElementById('edit-status').value = concert.status.toString();

            openModal('editModal');
        } catch (error) {
            alert('Error loading concert data');
        }
    }

    async function updateConcert(event) {
        event.preventDefault();
        const formData = new FormData(event.target);
        const data = Object.fromEntries(formData);
        const id = data.id;
        delete data.id;
        
        data.status = data.status === 'true';
        data.totalSeats = parseInt(data.totalSeats);
        data.availableSeats = parseInt(data.availableSeats);
        data.price = parseFloat(data.price);

        try {
            const response = await fetch(`/concerts/${id}`, {
                method: 'PUT',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify(data),
                credentials: 'include'
            });

            if (response.ok) {
                alert('Concert updated successfully!');
                window.location.reload();
            } else {
                alert('Error updating concert');
            }
        } catch (error) {
            alert('Network error');
        }
    }

    async function deleteConcert(id, title) {
        if (confirm(`Are you sure you want to delete "${title}"?`)) {
            try {
                const response = await fetch(`/concerts/${id}`, {
                    method: 'DELETE',
                    credentials: 'include'
                });

                if (response.ok) {
                    alert('Concert deleted successfully!');
                    window.location.reload();
                } else {
                    alert('Error deleting concert');
                }
            } catch (error) {
                alert('Network error');
            }
        }
    }

    window.onclick = function(event) {
        if (event.target.classList.contains('modal')) {
            event.target.classList.remove('show');
        }
    }
</script>