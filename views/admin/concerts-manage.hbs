<style>
    .modal {
        display: none;
        position: fixed;
        z-index: 100;
        left: 0;
        top: 0;
        width: 100%;
        height: 100%;
        overflow: auto;
        background-color: rgba(0,0,0,0.5);
    }

    .modal.show {
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .concert-card {
        transition: all 0.3s ease;
        position: relative;
        overflow: hidden;
    }

    .concert-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 20px 25px -5px rgba(0, 0, 0, 0.2);
    }

    .concert-card::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        height: 4px;
        background: linear-gradient(90deg, #f59e0b, #ef4444, #ec4899);
    }
</style>

<!-- Top Bar -->
<header class="bg-white shadow-sm sticky top-0 z-10">
    <div class="flex items-center justify-between px-4 md:px-8 py-4">
        <button onclick="toggleSidebar()" class="md:hidden text-gray-700 hover:text-gray-900 mr-4">
            <i class="fas fa-bars text-2xl"></i>
        </button>
        <div>
            <h2 class="text-2xl font-bold text-gray-800">Gestion des concerts</h2>
            <p class="text-gray-600 text-sm">Gérer et planifier les événements de concert</p>
        </div>
        <button onclick="openModal('createModal')" class="bg-gradient-to-r from-pink-600 to-rose-600 hover:from-pink-700 hover:to-rose-700 text-white px-6 py-3 rounded-lg font-medium shadow-lg">
            <i class="fas fa-plus mr-2"></i>Créer un concert
        </button>
    </div>
</header>

<!-- Content -->
<div class="p-4 md:p-8">
    <!-- Concerts Grid -->
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-4 md:gap-6">
        {{#if concerts.length}}
            {{#each concerts}}
                <div class="concert-card bg-white rounded-xl shadow-md overflow-hidden">
                    <div class="flex">
                        <div class="w-48 h-48 flex-shrink-0">
                            <img src="{{this.image}}" alt="{{this.title}}" class="w-full h-full object-cover">
                        </div>
                        <div class="flex-1 p-6">
                            <div class="flex items-start justify-between mb-3">
                                <div>
                                    <h3 class="text-xl font-bold text-gray-800 mb-1">{{this.title}}</h3>
                                    {{!-- <p class="text-sm text-gray-600 flex items-center">
                                        <i class="fas fa-user text-pink-600 mr-2"></i>
                                        {{this.group.name}}
                                    </p> --}}
                                </div>
                                {{#if this.status}}
                                    <span class="px-3 py-1 text-xs font-semibold text-green-800 bg-green-100 rounded-full">Active</span>
                                {{else}}
                                    <span class="px-3 py-1 text-xs font-semibold text-red-800 bg-red-100 rounded-full">Inactive</span>
                                {{/if}}
                            </div>
                            <div class="space-y-2 mb-4">
                                <div class="flex items-center text-sm text-gray-600">
                                    <i class="fas fa-calendar w-5 text-pink-600"></i>
                                    <span>{{formatDate this.date}} - {{this.hour}}</span>
                                </div>
                                <div class="flex items-center text-sm text-gray-600">
                                    <i class="fas fa-map-marker-alt w-5 text-pink-600"></i>
                                    <span>{{this.location}}</span>
                                </div>
                                <div class="flex items-center text-sm text-gray-600">
                                    <i class="fas fa-ticket-alt w-5 text-pink-600"></i>
                                    <span>{{this.availableSeats}} / {{this.totalSeats}} place</span>
                                </div>
                                <div class="flex items-center text-sm font-semibold text-gray-800">
                                    <i class="fas fa-dollar-sign w-5 text-pink-600"></i>
                                    <span>${{this.price}}</span>
                                </div>
                            </div>
                            <div class="flex space-x-2">
                                <button onclick="openEditModal('{{this._id}}')" class="flex-1 bg-pink-100 text-pink-700 hover:bg-pink-200 px-3 py-2 rounded-lg text-sm font-medium transition">
                                    <i class="fas fa-edit mr-1"></i>Edit
                                </button>
                                <button onclick="deleteConcert('{{this._id}}', '{{this.title}}')" class="flex-1 bg-red-100 text-red-700 hover:bg-red-200 px-3 py-2 rounded-lg text-sm font-medium transition">
                                    <i class="fas fa-trash mr-1"></i>Delete
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            {{/each}}
        {{else}}
            <div class="col-span-2 text-center py-20 bg-white rounded-xl">
                <i class="fas fa-music text-6xl text-gray-300 mb-4"></i>
                <p class="text-gray-600 text-xl mb-6">No concerts yet</p>
                <button onclick="openModal('createModal')" class="bg-pink-600 text-white px-8 py-3 rounded-lg font-medium">
                    Créer votre premier concert
                </button>
            </div>
        {{/if}}
    </div>
</div>

