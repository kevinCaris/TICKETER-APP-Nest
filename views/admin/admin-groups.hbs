<!-- Top Bar -->
<header class="bg-white shadow-sm sticky top-0 z-10">
    <div class="flex items-center justify-between px-4 md:px-8 py-4">
        <div>
            <h2 class="text-2xl font-bold text-gray-800">Groups Management</h2>
            <p class="text-gray-600 text-sm">Manage artist groups and bands</p>
        </div>
        <button onclick="openModal('createModal')" class="bg-gradient-to-r from-teal-600 to-green-600 hover:from-teal-700 hover:to-green-700 text-white px-6 py-3 rounded-lg font-medium shadow-lg">
            <i class="fas fa-plus mr-2"></i>Create Group
        </button>
    </div>
</header>

<!-- Content -->
<div class="p-4 md:p-8">
    <!-- Filters -->
    <div class="bg-white rounded-xl shadow-md p-6 mb-8">
        <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-4 gap-3 md:gap-4">
            <div class="relative">
                <i class="fas fa-search absolute left-3 top-1/2 transform -translate-y-1/2 text-gray-400"></i>
                <input type="text" id="searchInput" placeholder="Search groups..." class="w-full pl-10 pr-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-teal-600">
            </div>
            <select id="genreFilter" class="px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-teal-600">
                <option value="">All Genres</option>
            </select>
            <select id="sortFilter" class="px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-teal-600">
                <option value="">Sort By</option>
                <option value="name-asc">Name A-Z</option>
                <option value="name-desc">Name Z-A</option>
            </select>
            <button onclick="applyFilters()" class="bg-gray-100 hover:bg-gray-200 text-gray-700 px-4 py-2 rounded-lg font-medium">
                <i class="fas fa-filter mr-2"></i>Apply Filters
            </button>
        </div>
    </div>

    <!-- Groups Grid -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6">
        {{#if data}}
            {{#each data}}
        <div class="group-card bg-white rounded-xl shadow-md overflow-hidden hover:shadow-lg transition-shadow">
            <div class="relative h-48">
                <img src="{{this.image}}" alt="{{this.name}}" class="w-full h-full object-cover">
            </div>
            <div class="p-5">
                <div class="flex items-start justify-between mb-3">
                    <div>
                        <h3 class="font-bold text-lg text-gray-800 mb-1">{{this.name}}</h3>
                        <p class="text-sm text-gray-600">{{this.description}}</p>
                    </div>
                    <span class="px-2 py-1 text-xs font-semibold text-green-800 bg-green-100 rounded-full">Active</span>
                </div>
                <div class="space-y-2 mb-4">
                    <div class="flex items-center text-sm text-gray-600">
                        <i class="fas fa-music w-5 text-teal-600"></i>
                        <span>{{this.genre}}</span>
                    </div>
                </div>
                <div class="flex space-x-2">
                    <button onclick="editGroup('{{this.id}}')" class="flex-1 bg-teal-100 text-teal-700 hover:bg-teal-200 px-4 py-2 rounded-lg text-sm font-medium transition">
                        <i class="fas fa-edit mr-1"></i>Edit
                    </button>
                    <button onclick="deleteGroup('{{this.id}}', '{{this.name}}')" class="flex-1 bg-red-100 text-red-700 hover:bg-red-200 px-4 py-2 rounded-lg text-sm font-medium transition">
                        <i class="fas fa-trash mr-1"></i>Delete
                    </button>
                </div>
            </div>
        </div>
            {{/each}}
        {{else}}
        <p class="col-span-full text-center text-gray-500">No singers found.</p>
        {{/if}}
    </div>
</div>

<!-- Create Group Modal -->
<div id="createModal" class="modal">
    <div class="bg-white rounded-xl shadow-2xl w-full max-w-2xl p-8 m-4">
        <div class="flex items-center justify-between mb-6">
            <h3 class="text-2xl font-bold text-gray-800">Create New Group</h3>
            <button onclick="closeModal('createModal')" class="text-gray-400 hover:text-gray-600">
                <i class="fas fa-times text-2xl"></i>
            </button>
        </div>
        <form id="createForm" class="space-y-4">
            <div>
                <label class="block text-sm font-medium text-gray-700 mb-2">Group Name *</label>
                <input type="text" id="createName" required class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-teal-600" placeholder="e.g., Coldplay">
            </div>
            <div class="grid grid-cols-2 gap-4">
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-2">Genre *</label>
                    <select id="createGenre" required class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-teal-600">
                        <option value="">Select Genre</option>
                    </select>
                </div>
            </div>
            <div>
                <label class="block text-sm font-medium text-gray-700 mb-2">Description</label>
                <textarea id="createDescription" rows="3" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-teal-600" placeholder="Brief description about the group..."></textarea>
            </div>
            <div>
                <label class="block text-sm font-medium text-gray-700 mb-2">Image URL *</label>
                <input type="url" id="createImage" required class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-teal-600" placeholder="https://example.com/image.jpg">
            </div>
            <div class="flex space-x-4 pt-4">
                <button type="submit" class="flex-1 bg-gradient-to-r from-teal-600 to-green-600 hover:from-teal-700 hover:to-green-700 text-white px-6 py-3 rounded-lg font-medium">
                    Create Group
                </button>
                <button type="button" onclick="closeModal('createModal')" class="flex-1 bg-gray-200 hover:bg-gray-300 text-gray-800 px-6 py-3 rounded-lg font-medium">
                    Cancel
                </button>
            </div>
        </form>
    </div>
</div>

<!-- Edit Group Modal -->
<div id="editModal" class="modal">
    <div class="bg-white rounded-xl shadow-2xl w-full max-w-2xl p-8 m-4">
        <div class="flex items-center justify-between mb-6">
            <h3 class="text-2xl font-bold text-gray-800">Edit Group</h3>
            <button onclick="closeModal('editModal')" class="text-gray-400 hover:text-gray-600">
                <i class="fas fa-times text-2xl"></i>
            </button>
        </div>
        <form id="editForm" class="space-y-4">
            <input type="hidden" id="editId">
            <div>
                <label class="block text-sm font-medium text-gray-700 mb-2">Group Name *</label>
                <input type="text" id="editName" required class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-teal-600">
            </div>
            <div class="grid grid-cols-2 gap-4">
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-2">Genre *</label>
                    <select id="editGenre" required class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-teal-600">
                    </select>
                </div>
            </div>
            <div>
                <label class="block text-sm font-medium text-gray-700 mb-2">Description</label>
                <textarea id="editDescription" rows="3" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-teal-600"></textarea>
            </div>
            <div>
                <label class="block text-sm font-medium text-gray-700 mb-2">Image URL *</label>
                <input type="url" id="editImage" required class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-teal-600">
            </div>
            <div class="flex space-x-4 pt-4">
                <button type="submit" class="flex-1 bg-gradient-to-r from-teal-600 to-green-600 hover:from-teal-700 hover:to-green-700 text-white px-6 py-3 rounded-lg font-medium">
                    Save Changes
                </button>
                <button type="button" onclick="closeModal('editModal')" class="flex-1 bg-gray-200 hover:bg-gray-300 text-gray-800 px-6 py-3 rounded-lg font-medium">
                    Cancel
                </button>
            </div>
        </form>
    </div>
</div>

<style>
    .modal {
        display: none;
        position: fixed;
        z-index: 1000;
        left: 0;
        top: 0;
        width: 100%;
        height: 100%;
        background-color: rgba(0, 0, 0, 0.5);
        align-items: center;
        justify-content: center;
    }

    .modal.show {
        display: flex;
    }

    .group-card {
        transition: transform 0.3s, box-shadow 0.3s;
    }

    .group-card:hover {
        transform: translateY(-4px);
    }
</style>

<script>
    let allGroups = [];
    let allGenres = [];
    const API_BASE = '/groups';

    function openModal(modalId) {
        document.getElementById(modalId).classList.add('show');
    }

    function closeModal(modalId) {
        document.getElementById(modalId).classList.remove('show');
    }

    function populateGenreSelects() {
        const genres = [...new Set(allGroups.map(g => g.genre))].filter(Boolean);
        const genreFilter = document.getElementById('genreFilter');
        const createGenre = document.getElementById('createGenre');
        const editGenre = document.getElementById('editGenre');

        const genreOptions = genres.map(genre => `<option value="${genre}">${genre}</option>`).join('');

        createGenre.innerHTML = '<option value="">Select Genre</option>' + genreOptions;
        editGenre.innerHTML = genreOptions;
        genreFilter.innerHTML = '<option value="">All Genres</option>' + genreOptions;
    }

    function applyFilters() {
        const search = document.getElementById('searchInput').value.toLowerCase();
        const genre = document.getElementById('genreFilter').value;
        const sort = document.getElementById('sortFilter').value;

        let filtered = allGroups.filter(g => {
            const matchSearch = g.name.toLowerCase().includes(search) || (g.description && g.description.toLowerCase().includes(search));
            const matchGenre = !genre || g.genre === genre;
            return matchSearch && matchGenre;
        });

        if (sort === 'name-asc') {
            filtered.sort((a, b) => a.name.localeCompare(b.name));
        } else if (sort === 'name-desc') {
            filtered.sort((a, b) => b.name.localeCompare(a.name));
        }

        // Afficher les résultats filtrés (tu dois implémenter le re-render)
        console.log('Filtered groups:', filtered);
    }

    function editGroup(id) {
        const group = allGroups.find(g => g.id === id);
        if (group) {
            document.getElementById('editId').value = id;
            document.getElementById('editName').value = group.name;
            document.getElementById('editGenre').value = group.genre;
            document.getElementById('editDescription').value = group.description || '';
            document.getElementById('editImage').value = group.image;
            openModal('editModal');
        }
    }

    async function deleteGroup(id, name) {
        if (confirm(`Are you sure you want to delete "${name}"?`)) {
            try {
                const response = await fetch(`${API_BASE}/${id}`, {
                    method: 'DELETE'
                });
                if (response.ok) {
                    alert(`${name} deleted successfully!`);
                    location.reload(); // Recharger la page
                } else {
                    alert('Error deleting group');
                }
            } catch (error) {
                console.error('Delete error:', error);
                alert('Error deleting group');
            }
        }
    }

    document.getElementById('createForm')?.addEventListener('submit', async (e) => {
        e.preventDefault();
        const newGroup = {
            name: document.getElementById('createName').value,
            genre: document.getElementById('createGenre').value,
            description: document.getElementById('createDescription').value,
            image: document.getElementById('createImage').value,
        };
        
        try {
            const response = await fetch(API_BASE, {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify(newGroup)
            });
            if (response.ok) {
                alert('Group created successfully!');
                location.reload();
            } else {
                alert('Error creating group');
            }
        } catch (error) {
            console.error('Create error:', error);
            alert('Error creating group');
        }
    });

    document.getElementById('editForm')?.addEventListener('submit', async (e) => {
        e.preventDefault();
        const id = document.getElementById('editId').value;
        const updatedGroup = {
            name: document.getElementById('editName').value,
            genre: document.getElementById('editGenre').value,
            description: document.getElementById('editDescription').value,
            image: document.getElementById('editImage').value,
        };

        try {
            const response = await fetch(`${API_BASE}/${id}`, {
                method: 'PATCH',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify(updatedGroup)
            });
            if (response.ok) {
                alert('Group updated successfully!');
                location.reload();
            } else {
                alert('Error updating group');
            }
        } catch (error) {
            console.error('Update error:', error);
            alert('Error updating group');
        }
    });

    window.onclick = function(event) {
        if (event.target.classList.contains('modal')) {
            event.target.classList.remove('show');
        }
    }

    // Charger les groupes depuis Handlebars (ajouté via le rendu serveur)
    document.addEventListener('DOMContentLoaded', () => {
        const groupCards = document.querySelectorAll('.group-card');
        groupCards.forEach(card => {
            const name = card.querySelector('h3').textContent;
            const genre = card.querySelector('.fa-music').nextElementSibling.textContent;
            const description = card.querySelector('p.text-gray-600').textContent;
            const image = card.querySelector('img').src;
            const editBtn = card.querySelector('[onclick*="editGroup"]');
            const id = editBtn.getAttribute('onclick').match(/'([^']+)'/)[1];
            
            allGroups.push({ id, name, genre, description, image });
        });
        populateGenreSelects();
    });
</script>